<p style="color: green"><%= notice %></p>

<% content_for :title, "Transactions" %>

<h1>Transactions</h1>

<div id="transactions">
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
        <th>Amount</th>
        <th>Category</th>
        <th>Account</th>
      </tr>
    </thead>
    <tbody>
    <% @transactions.each do |transaction| %>
      <%= render transaction %>
    <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New transaction", new_transaction_path %>
